<nav aria-label="breadcrumb" class="mt-3">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/admin">Home</a></li>
    <li class="breadcrumb-item"><a href="/admin/mazes">Mazes</a></li>
    <li class="breadcrumb-item active" aria-current="page">Formulas</li>
  </ol>
</nav>
<header>
  <h1>Maze Formulas</h1>
</header>
<section>
  <div class="p-4 bg-light text-dark border border-dark rounded-sm" role="alert">
    <p>Update formula constraints on the <a href="/admin/settings">Settings</a> page.</p>
    <p>Create a new <a href="/admin/mazes/formulas/new">Experimental Formula</a>.</p>
    <form action="/admin/mazes/formulas" method="post">
      <input type="hidden" name="generate_formulas" value="true">
      <button type="type" class="btn btn-primary">Generate All Maze Formulas</button>
    </form>
  </div>
</section>
<section>
  <% @maze_types.each do |type| %>
    <h2 class="mt-3"><a href="/admin/mazes/formulas/<%= type %>"><%= type.to_s.capitalize %></a></h2>
    <nav class="nav flex-column">
    <% @formula_statuses.each do |status| %>
      <a class="mb-2" href="/admin/mazes/formulas/<%= type %>#<%= status %>"><%= status.capitalize %>: <%= @maze_status_counts[type][status][0]['count'] %></a>
    <% end %>
    </nav>
  <% end %>
</section>

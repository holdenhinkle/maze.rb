<nav aria-label="breadcrumb" class="mt-3">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/admin">Home</a></li>
    <li class="breadcrumb-item"><a href="/admin/mazes">Mazes</a></li>
    <li class="breadcrumb-item"><a href="/admin/mazes/formulas">Formulas</a></li>
    <li class="breadcrumb-item active" aria-current="page">New</li>
  </ol>
</nav>
<header>
  <h1>New Maze Formula</h1>
</header>
<section>
  <article>
    <p>Create a new Maze Formula.</p>
    <form action="/admin/mazes/formulas/new" method="post">
      <div class="form-group">
        <h3>Type</h3>
        <div class="row">
          <div class="form-group col-md-8">
            <label for="maze_type" >Maze <strong>Type</strong></label>  <a tabindex="0" role="button" data-toggle="popover" data-trigger="focus" data-html="true" title="<%= @popovers[:title]%>" data-content="<%= @popovers[:body]%>"><i class="fas fa-question-circle"></i></a>
            <select class="form-control form-control" name="maze_type" id="maze_type">
              <% @maze_types.each do |type| %>
                <% type_string = type.to_s.capitalize %>
                <% if session["validation"] %>
                  <% if @formula[:type] == type %>
                    <option value="<%= type %>" selected="selected"><%= type_string %></option>
                  <% else %>
                    <option value="<%= type %>"><%= type_string %></option>
                  <% end %>
                <% else %>
                  <option value="<%= type %>"><%= type_string %></option>
                <% end %>
              <% end %>
            </select>
          </div>
        </div>
        <h3>Dimensions</h3>
        <div class="row">
          <div class="form-group col-md-4">
            <label for="x_value">Maze <strong>Width</strong> (x-value)</label> <a tabindex="0" role="button" data-toggle="popover" data-trigger="focus" data-html="true" title="<%= @popovers[:x][:title]%>" data-content="<%= @popovers[:x][:body] %>"><i class="fas fa-question-circle"></i></a>
            <% if session["x_validation_css"] %>
              <input type="number" class="form-control <%= session.delete("x_validation_css") %>" name="x_value" id="x_value" aria-describedby="x-help" value="<%= @formula[:x] %>">
            <% else %>
              <input type="number" class="form-control" name="x_value" id="x_value" aria-describedby="x-help" placeholder="0">
            <% end %>
            <% if session["x_validation_feedback"] %>
              <div class="<%= session.delete("x_validation_feedback_css") %>">
                <%= session.delete("x_validation_feedback") %>
              </div>
            <% end %>
          </div>
          <div class="form-group col-md-4">
            <label for="y_value">Maze <strong>Height</strong> (y-value)</label> <a tabindex="0" role="button" data-toggle="popover" data-trigger="focus" data-html="true" title="<%= @popovers[:y][:title]%>" data-content="<%= @popovers[:y][:body] %>"><i class="fas fa-question-circle"></i></a>
            <% if session["y_validation_css"] %>
              <input type="number" class="form-control <%= session.delete("y_validation_css") %>" name="y_value" id="y_value" aria-describedby="y-help" value="<%= @formula[:y] %>">
            <% else %>
              <input type="number" class="form-control" name="y_value" id="y_value" aria-describedby="y-help" placeholder="0">
            <% end %>
            <% if session["y_validation_feedback"] %>
              <div class="<%= session.delete("y_validation_feedback_css") %>">
                <%= session.delete("y_validation_feedback") %>
              </div>
            <% end %>
          </div>
        </div>
        <h3>Squares</h3>
        <div class="row">
          <div class="form-group col-md-4">
            <label for="endpoints">Number of <strong>Endpoints</strong></label> <a tabindex="0" role="button" data-toggle="popover" data-trigger="focus" data-html="true" title="<%= @popovers[:endpoint][:title] %>" data-content="<%= @popovers[:endpoint][:body] %>"><i class="fas fa-question-circle"></i></a>
            <% if session["endpoint_validation_css"] %>
              <input type="number" class="form-control <%= session.delete("endpoint_validation_css") %>" name="endpoints" id="endpoints" aria-describedby="endpoints-help"  value="<%= @formula[:endpoints] %>">
            <% else %>
              <input type="number" class="form-control" name="endpoints" id="endpoints" aria-describedby="endpoints-help" placeholder="0">
            <% end %>
            <% if session["endpoint_validation_feedback"] %>
              <div class="<%= session.delete("endpoint_validation_feedback_css") %>">
                <%= session.delete("endpoint_validation_feedback") %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-md-4">
            <label for="barriers">Number of <strong>Barriers</strong></label> <a tabindex="0" role="button" data-toggle="popover" data-trigger="focus" data-html="true" title="<%= @popovers[:barrier][:title]%>" data-content="<%= @popovers[:barrier][:body]%>"><i class="fas fa-question-circle"></i></a>
            <% if session["barrier_validation_css"] %>
              <input type="number" class="form-control <%= session.delete("barrier_validation_css") %>" name="barriers" id="barriers" aria-describedby="barriers-help" value="<%= @formula[:barriers] %>">
            <% else %>
              <input type="number" class="form-control" name="barriers" id="barriers" aria-describedby="barriers-help" placeholder="0">
            <% end %>
            <% if session["barrier_validation_feedback"] %>
              <div class="<%= session.delete("barrier_validation_feedback_css") %>">
                <%= session.delete("barrier_validation_feedback") %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-md-4">
            <label for="bridges">Number of <strong>Bridges</strong></label> <a tabindex="0" role="button" data-toggle="popover" data-trigger="focus" data-html="true" title="<%= @popovers[:bridge][:title]%>" data-content="<%= @popovers[:bridge][:body]%>"><i class="fas fa-question-circle"></i></a>
            <% if session["bridge_validation_css"] %>
              <input type="number" class="form-control <%= session.delete("bridge_validation_css") %>" name="bridges" id="bridges" aria-describedby="bridges-help" value="<%= @formula[:bridges] %>">
            <% else %>
              <input type="number" class="form-control" name="bridges" id="bridges" aria-describedby="bridges-help" placeholder="0">
            <% end %>
            <% if session["bridge_validation_feedback"] %>
              <div class="<%= session.delete("bridge_validation_feedback_css") %>">
                <%= session.delete("bridge_validation_feedback") %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-md-4">
            <label for="tunnels">Number of <strong>Tunnels</strong></label> <a tabindex="0" role="button" data-toggle="popover" data-trigger="focus" data-html="true" title="<%= @popovers[:tunnel][:title]%>" data-content="<%= @popovers[:tunnel][:body]%>"><i class="fas fa-question-circle"></i></a>
            <% if session["tunnel_validation_css"] %>
              <input type="number" class="form-control <%= session.delete("tunnel_validation_css") %>" name="tunnels" id="tunnels" aria-describedby="tunnels-help" value="<%= @formula[:tunnels] %>">
            <% else %>
              <input type="number" class="form-control" name="tunnels" id="tunnels" aria-describedby="tunnels-help" placeholder="0">
            <% end %>
            <% if session["tunnel_validation_feedback"] %>
              <div class="<%= session.delete("tunnel_validation_feedback_css") %>">
                <%= session.delete("tunnel_validation_feedback") %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-md-4">
            <label for="portals">Number of <strong>Portals</strong></label> <a tabindex="0" role="button" data-toggle="popover" data-trigger="focus" data-html="true" title="<%= @popovers[:portal][:title]%>" data-content="<%= @popovers[:portal][:body]%>"><i class="fas fa-question-circle"></i></a>
            <% if session["portal_validation_css"] %>
              <input type="number" class="form-control <%= session.delete("portal_validation_css") %>" name="portals" id="portals" aria-describedby="portals-help" value="<%= @formula[:portals] %>">
            <% else %>
              <input type="number" class="form-control" name="portals" id="portals" aria-describedby="portals-help" placeholder="0">
            <% end %>
            <% if session["portal_validation_feedback"] %>
              <div class="<%= session.delete("portal_validation_feedback_css") %>">
                <%= session.delete("portal_validation_feedback") %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="form-check">
          <% if session["validation"] %>
            <% if @formula[:experiment] %>
              <input class="form-check-input" type="checkbox" checked="checked" name="experiment" id="experiment" value="true">
            <% else %>
              <input class="form-check-input" type="checkbox" name="experiment" id="experiment" value="true">
            <% end %>
          <% else %>
            <input class="form-check-input" type="checkbox" name="experiment" id="experiment" value="true">
          <% end %>
          <label class="form-check-label" for="experiment">
            This is an experimental formula. Override validation. 
          </label>
        </div>
        <% session.delete("validation") if session["validation"] %>
        <button type="submit" class="btn btn-primary mt-4">Submit Form</button>
      </div>
    </form>
  </article>
</section>
